- var REGISTRATION = LANG.registration;
- var FORM = LANG.form;

section.registration#registration
	.wrapper
		.registration__wrapper
			.registration__left
				h2.registration__title.title!= REGISTRATION.title
				.registration__info
					.registration__price-wrap
						p.registration__price-label!= REGISTRATION.label
						.registration__price
							p.registration__price-new.yellow!= REGISTRATION.old_price
							p.registration__price-old!= REGISTRATION.new_price
					.registration__date
						.date-item
							img.date-item__ico(src="img/svg/date_ico_1.svg", alt="ico")
							p.date-item__text!= REGISTRATION.date1
						.date-item
							img.date-item__ico(src="img/svg/date_ico_2.svg", alt="ico")
							p.date-item__text!= REGISTRATION.date2
			.registration__form
				form.form.js-registration-form(action="https://api.apispreadsheets.com/data/6bytkRZqh1ZUd2cp/", method="post" data-validation-schema="signup-form")
					.form__top
						p.form__timer-text!= FORM.timer
						.timer
							.timer__block
								.timer__el
									span.days 0
								.timer__el
									span.days 0
							p.timer__dot :
							.timer__block
								.timer__el
									span.hours 0
								.timer__el
									span.hours 0
							p.timer__dot :
							.timer__block
								.timer__el
									span.minutes 0
								.timer__el
									span.minutes 0
					input.js-input-date(type="hidden" name="date")
					.form__inputs
						.input-wrap.form__input-wrap.js-input-wrap
							input.form__input.input-wrap__input.js-input(type="text", name="name")
							span.input-wrap__label.js-label!= FORM.inputName
							span.input-wrap__error.js-error
						.input-wrap.form__input-wrap.js-input-wrap
							input.form__input.input-wrap__input.js-input(type="tel", name="phone")
							span.input-wrap__label.js-label!= FORM.inputPhone
							span.input-wrap__error.js-error
						.input-wrap.form__input-wrap.js-input-wrap
							input.form__input.input-wrap__input.js-input(type="email", name="email")
							span.input-wrap__label.js-label!= FORM.inputEmail
							span.input-wrap__error.js-error
					button.form__btn.btn!= FORM.button_3
					.form__checkbox.checkbox.js-input-wrap
						label.checkbox__label!= FORM.checkbox
							input.checkbox__input(type="checkbox" name="checkbox")
							span.checkbox__checkmark
								i.fico.fico-check
							span.checkbox__error.js-error